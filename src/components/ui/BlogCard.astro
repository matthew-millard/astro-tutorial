---
import type { CollectionEntry } from "astro:content";
import PubDate from "./PubDate.astro";
import Tag from "./Tag.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, image, tag, pubDate } = post.data;
---

<div class="card-container">
  <img src={image.url} alt={image.alt} srcset="" loading="lazy" />
  <div class="card-body flow">
    <div class="card-meta">
      <PubDate date={pubDate} />
      <div class="card-tag">
        <Tag tag={tag} />
      </div>
    </div>
    <div class="card-text">
      <h3>{title}</h3>
      <p>{description}</p>
    </div>
  </div>
</div>

<style>
  .card-container {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .card-body {
    padding: 1.5rem 1rem;
  }
  .card-meta {
    /* margin-top: rem; */
    display: flex;
    align-items: center;
    gap: 1rem;
    /* background-color: darkseagreen; */
  }

  .card-tag {
    flex-grow: 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
</style>
