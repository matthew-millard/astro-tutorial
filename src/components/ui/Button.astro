---
interface Props {
  type?: 'button' | 'submit' | 'reset';
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
}

const { type = 'button', variant = 'primary' } = Astro.props;

const classVariants = {
  primary: 'primary',
  ghost: 'ghost',
  secondary: 'secondary',
  outline: 'outline',
};
---

<button type={type} class={classVariants[variant]}>
  <slot />
</button>

<style>
  button {
    padding: 12px;
    font-weight: 500;
    min-width: 0;
    max-width: fit-content;
  }

  .primary {
    background-color: var(--primary);
  }
  .ghost {
    background-color: transparent;
  }
  .secondary {
    background-color: var(--secondary);
  }
  .outline {
    background-color: transparent;
  }
</style>
