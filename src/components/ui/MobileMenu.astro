---
import { navigationLinks } from '../../data/navigation';
---

<div id="mobile-menu">
  <ul>
    {
      navigationLinks.map(link => (
        <a href={link.url}>
          <li>{link.title}</li>
        </a>
      ))
    }
  </ul>
</div>

<style>
  #mobile-menu {
    position: fixed;
    inset: 0;
    z-index: 50;
    width: 0%;
    background-color: var(--accent);
    border-right: 2px solid var(--text);
    transition: width 200ms cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .expanded {
    max-width: 450px;
    width: 80% !important;
  }
</style>
