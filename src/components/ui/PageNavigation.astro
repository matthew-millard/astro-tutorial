---
import type { Article } from '@data/articles-metadata';
import { Icon } from 'astro-icon/components';
interface Props {
  nextArticle: Article;
  previousArticle: Article;
  mostRecentArticle: boolean;
  oldestArticle: boolean;
}
const { nextArticle, previousArticle, mostRecentArticle, oldestArticle } = Astro.props;
---

<div class="page-navigation repel">
  {
    !mostRecentArticle && (
      <span>
        <Icon name="arrow-left" class="arrow" />
        <a href={previousArticle.slug}>{previousArticle.title}</a>
      </span>
    )
  }

  <span>
    <a href={nextArticle.slug}>{nextArticle.title}</a>
    <Icon name="arrow-right" class="arrow" />
  </span>
</div>

<style>
  .page-navigation {
    padding-top: 2rem;
    border-top: 1px solid var(--border-10);
  }

  a {
    font-weight: var(--font-medium);
  }

  .arrow {
    vertical-align: -0.17em;
  }
</style>
