---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  altText: string;
  createdAt: string;
  updatedAt?: string;
  slug: string;
  estimatedReadTime: string;
}

const { title, description, imageUrl, altText, createdAt, updatedAt, slug, estimatedReadTime } = Astro.props;
---

<a href={`/${slug}`}>
  <div>
    <img src={imageUrl} alt={altText} />
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</a>
