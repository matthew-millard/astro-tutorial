---
import { Icon } from "astro-icon/components";
const icons = [
  // {
  //   name: "discord",
  //   href: "https://discord.gg/7rZ5fC6w",
  // },
  {
    name: "linkedin",
    href: "https://www.linkedin.com/in/matthew-richie-millard/",
  },
  {
    name: "github",
    href: "https://github.com/matthew-millard",
  },
  // {
  //   name: "instagram",
  //   href: "https://www.instagram.com/_mattmillard/",
  // },
];
---

<div class="socials">
  {
    icons.map((icon) => (
      <a
        href={icon.href}
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon"
        aria-label={icon.name}
      >
        <Icon name={icon.name} />
      </a>
    ))
  }
</div>

<style>
  .socials {
    display: flex;
    font-size: var(--icon-base);
    gap: 1rem;
  }

  .social-icon {
    display: inline-flex;
  }
</style>
