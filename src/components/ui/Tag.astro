---
interface Props {
  tag: string;
}

const { tag } = Astro.props;
---

<p class="tag">{tag}</p>

<style>
  .tag {
    white-space: nowrap;
    padding: 0.375rem;
    display: grid;
    line-height: 1;
    text-align: center;
    font-size: 14px;
    font-weight: var(--font-normal);
    background-color: var(--color-tag-bg);
    border: 1px solid var(--color-tag-border);
    border-radius: var(--radius-sm);
  }
</style>
