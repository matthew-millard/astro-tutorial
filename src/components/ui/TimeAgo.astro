---
import { timeAgo } from "@utils/time-ago";

interface Props {
  pubDate: Date;
}
const { pubDate } = Astro.props;
---

<span class="time-ago">{timeAgo(pubDate)}</span>

<style>
  .time-ago {
    display: inline-block;
    font-size: small;
    font-style: italic;
    color: var(--color-text-secondary);
  }
</style>
