---
import "../styles/global.css";
import CommonHead from "@components/meta/CommonHead.astro";
import Footer from "@components/ui/Footer.astro";
import Header from "@components/ui/Header.astro";
import SidePanel from "@components/ui/SidePanel.astro";

interface Props {
  pageTitle: string;
  pageDescription: string;
}

const { pageTitle, pageDescription } = Astro.props;
---

<html lang="en">
  <head>
    <CommonHead />
    <meta name="description" content={pageDescription} />
    <title>{pageTitle} | Matt Millard</title>
  </head>
  <body>
    <Header />
    <SidePanel />
    <div class="page-container">
      <main class="main-grid flow">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>

<style>
  .page-container {
    padding-block: 5rem;
    padding-inline: 1rem;
  }

  .main-grid {
    position: relative;
    display: grid;
    justify-content: center;
    grid-template-columns: minmax(0, 75ch);
  }
</style>

<script>
  import "@scripts/hide-header-on-scroll";
</script>
