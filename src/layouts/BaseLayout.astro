---
import "../styles/global.css";
import CommonHead from "@components/meta/CommonHead.astro";
import Header from "@components/ui/Header.astro";
import SidePanel from "@components/ui/SidePanel.astro";
import Footer from "@components/ui/Footer.astro";
import VerticalIconBar from "@components/ui/VerticalIconBar.astro";

interface Props {
  pageTitle: string;
  pageDescription: string;
}

const { pageTitle, pageDescription } = Astro.props;
---

<html lang="en">
  <head>
    <CommonHead />
    <meta name="description" content={pageDescription} />
    <title>{pageTitle} | Matt Millard</title>
  </head>
  <body>
    <Header />
    <SidePanel />
    <div class="page-container">
      <main class="main-container flow">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .page-container {
    margin-top: 5rem;
    padding-block: 2em;
    padding-inline: 1rem;
    min-height: calc(100dvh - 5rem);
    display: flex;
    flex-direction: column;
  }

  .main-container {
    margin-inline: auto;
    max-width: 65ch;
  }

  @media (min-width: 78rem) {
    .page-container {
      padding-inline-start: 20rem;
      flex-direction: row;
    }
  }
</style>

<script>
  import "@scripts/side-panel";
</script>
