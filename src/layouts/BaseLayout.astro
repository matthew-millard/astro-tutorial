---
import "../styles/global.css";
import CommonHead from "@components/meta/CommonHead.astro";
import Header from "@components/ui/Header.astro";
import SidePanel from "@components/ui/SidePanel.astro";
import Footer from "@components/ui/Footer.astro";
import VerticalIconBar from "@components/ui/VerticalIconBar.astro";

interface Props {
  pageTitle: string;
  pageDescription: string;
}

const { pageTitle, pageDescription } = Astro.props;
---

<html lang="en">
  <head>
    <CommonHead />
    <meta name="description" content={pageDescription} />
    <title>{pageTitle} | Matt Millard</title>
  </head>
  <body>
    <Header />
    <SidePanel />
    <div class="page">
      <div class="content-wrapper">
        <main class="main-container">
          <slot />
        </main>
        <VerticalIconBar />
      </div>
    </div>
  </body><Footer />
</html>

<style></style>

<script>
  import "@scripts/side-panel";
</script>
