---
import "../styles/global.css";
import CommonHead from "@components/meta/CommonHead.astro";
import Header from "@components/ui/Header.astro";
import SidePanel from "@components/ui/SidePanel.astro";
import type { InferEntrySchema } from "astro:content";
import Pagination from "@components/ui/Pagination.astro";
import TableOfContents from "@components/ui/TableOfContents.astro";

interface Props {
  frontmatter: InferEntrySchema<"blog">;
}

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <CommonHead />
    <title>{frontmatter.title} | Matt Millard</title>
    <meta name="description" content={frontmatter.description} />
    <meta name="author" content={frontmatter.author} />
  </head>
  <body>
    <Header />
    <SidePanel />
    <div class="page-container">
      <div id="scroll-area" class="grid">
        <main class="post-content stack-lg">
          <article class="flow">
            <slot />
          </article>
          <footer>
            <Pagination />
          </footer>
        </main>
        <TableOfContents />
      </div>
    </div>
  </body>
</html>

<style>
  .page-container {
    padding-block-start: 5rem;
    padding-inline: 1rem;
  }

  .post-content {
    padding-block-start: 2rem;
    max-width: 65ch;
    margin-inline: auto;
  }

  @media (min-width: 78rem) {
    .page-container {
      padding-inline-start: 24rem;
      padding-inline-end: 2rem;
    }

    .post-content {
      max-width: 65ch;
      margin-inline: auto;
    }
  }

  @media (min-width: 90rem) {
    .grid {
      display: grid;
      justify-content: center;
      align-items: start;
      grid-template-columns: 1fr 300px;
      column-gap: 3rem;
      max-width: 1400px;
      margin-inline: auto;
    }

    .post-content {
      max-width: 65ch;
      margin-inline: 0;
      min-width: 0;
    }
  }
</style>

<script>
  import "@scripts/side-panel";
</script>
