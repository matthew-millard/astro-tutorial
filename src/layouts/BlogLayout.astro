---
import "../styles/global.css";
import CommonHead from "@components/meta/CommonHead.astro";
import Header from "@components/ui/Header.astro";
import SidePanel from "@components/ui/SidePanel.astro";
import Footer from "@components/ui/Footer.astro";
import type { InferEntrySchema } from "astro:content";
import BlogNavigation from "@components/ui/BlogNavigation.astro";

interface Props {
  frontmatter: InferEntrySchema<"blog">;
}

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <CommonHead />
    <title>{frontmatter.title} | Matt Millard</title>
    <meta name="description" content={frontmatter.description} />
    <meta name="author" content={frontmatter.author} />
  </head>
  <body>
    <Header />
    <SidePanel />
    <div class="page">
      <main>
        <slot />
      </main>
      <footer>
        <BlogNavigation />
      </footer>
    </div>
  </body>
</html>

<style>
  .page {
    margin-top: 5rem;
    padding-block: 2rem;
    padding-inline: 1rem;
    min-height: calc(100dvh - 5rem);
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 78rem) {
    .page {
      padding-block: 2rem;
      padding-left: 24rem;
      padding-right: 2rem;
      /* background-color: aqua; */
    }
  }

  main {
    flex-grow: 1;
    max-width: 80ch;
    /* background-color: pink; */
  }

  footer {
    /* background-color: teal; */
  }
</style>

<script>
  import "@scripts/side-panel";
</script>
