          {
            blogPosts.map(post => (
              <a href={`/${post.slug}`}>
                <li>
                  <p>{post.title}</p>
                </li>
              </a>
            ))
          }
        </ul>
      </nav>
    </aside>

    <main class="main-container">
      <div class="main-content container">
        <h1>Main</h1>
      </div>
