<style>
  .slot-container {
    display: grid;
  }

  @media (min-width: 1280px) {
    .slot-container {
      grid-template-columns: repeat(12, 1fr);
    }

    .aside-left-container {
      grid-column: 1 / 4;

      padding-top: 1rem;
      display: grid;
      grid-template-rows: 3rem auto;
      border-right: 1px solid var(--border-50);
    }

    .aside-left-content {
      ul {
        a {
          display: block;
          margin-bottom: 1rem;
          color: var(--text);
          text-decoration: none;
          transition: background-color 0.2s ease;

          li {
            padding: 0.5rem 1rem;
          }

          p {
            font-size: var(--text-lg);
            font-weight: var(--font-medium);
          }
        }

        a:hover {
          background-color: var(--background-hover);
        }
      }
    }

    .aside-left-header,
    .aside-right-header {
      align-content: center;
      padding-left: 1rem;
    }

    .main-container {
      grid-column: 4 / 13;
      display: grid;
      grid-template-columns: repeat(12, 1fr);

      .main-content {
        padding-top: 1rem;
        grid-column: 1 / 10;
        /* border-right: 1px solid var(--border-50); */
      }

      .aside-right-content {
        background-color: var(--background-aside-right);
        border-left: 1px solid var(--border-50);
        padding-top: 1rem;
        grid-column: 10 / 13;
        display: grid;
        grid-template-rows: 3rem auto;
      }
    }
  }
</style>
